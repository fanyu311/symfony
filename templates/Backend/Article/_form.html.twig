{{ form_start(form, {'attr': {'class': 'form card p-3 mt-4 w-75 mx-auto'}}) }}

{{ form_row(form.title) }}

<div class="row">
	<div class="col-md-6">
		{{ form_row(form.metaTitle) }}
	</div>
	<div class="col-md-6">{{ form_row(form.metaDescription) }}</div>
</div>
{{ form_row(form.categories) }}

<div class="text-start">
	<button type="button" class="btn btn-primary btn-add-collection" data-collection-holder-class="images">Ajouter une image</button>
</div>

<ul class="images mb-3 row add-collection-input" data-limit="10" data-index="{{ form.images|length > 0 ? form.images|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
	{% for image in form.images %}
		<li class="col-md-4">
			<button type="button" class="btn btn-danger text-light btn-remove-collection">
				<i class="bi bi-x-octagon-fill"></i>
			</button>
			{{ form_row(image, {'label': false}) }}
		</li>
	{% endfor %}
</ul>

{{ form_row(form.content) }}
{{ form_row(form.enable) }}

<div class="text-center">
	<button class="btn btn-primary" type="submit">{{ buttonLabel|default('Save') }}</button>
</div>

{{ form_row(form._token) }}

{{ form_end(form, {render_rest: false}) }}
