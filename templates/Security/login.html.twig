{% extends 'base.html.twig' %}

{% block title %}
	Se connecter
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<form action="{{ path('app.login') }}" method="post" class="card p-3 w-50 mx-auto">
			<h1 class="text-center">Se connecter</h1>
			{% if error %}
				<div class="alert alert-danger" role="alert">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<div class="mb-3">
				<label for="username" class="form-label">Email:</label>
				<input type="text" id="username" name="_username" placeholder="john@exemple.com" class="form-control" value="{{ lastUsername }}">
			</div>

			<div class="mb-3">
				<label for="password" class="form-label">Password:</label>
				<input type="password" id="password" class="form-control" placeholder="************" name="_password">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Se connecter</button>
			</div>

			<a href="{{ path('app.reset-password.request') }}" class="btn-link mt-2">Mot de passe oubli√© ?</a>
		</form>
	</section>
{% endblock %}
